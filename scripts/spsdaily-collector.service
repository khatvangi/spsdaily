[Unit]
Description=SPS Daily Feed Collector
After=network.target ollama.service
Wants=ollama.service

[Service]
Type=oneshot
User=kiran
WorkingDirectory=/storage/spsdaily
ExecStart=/storage/spsdaily/scripts/run_collector.sh
StandardOutput=append:/storage/spsdaily/logs/collector.log
StandardError=append:/storage/spsdaily/logs/collector.log

# Give it time for translations
TimeoutStartSec=1800

[Install]
WantedBy=multi-user.target
